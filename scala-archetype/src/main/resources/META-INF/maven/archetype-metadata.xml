<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">
    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>nz.net.osnz</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>scala-app</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.1-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>nz.net.osnz.scala</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/main/scala</directory>
            <includes>
                <include>**/*.scala</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/test/scala</directory>
            <includes>
                <include>**/*.scala</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>.</directory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>